<?php

$bathmoi= array("12", "15", "17","10", "18","12","16");
$mathima = array("Θρησκευτικά","Μαθηματικα","Φυσική","Πληροφορική","Ιστορία","Χημεία","Βιολογία");




 $pl=count($bathmoi);

